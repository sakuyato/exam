<Window x:Class="WpfApp7.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="400" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин:" />
            <TextBox x:Name="UsernameTextBox" Width="200" />
            <TextBlock Text="Пароль:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Width="200" />
            <Button Content="Авторизоваться" Width="200" Margin="0,10,0,0" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
