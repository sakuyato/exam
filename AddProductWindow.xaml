<Window x:Class="WpfApp7.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" ResizeMode="NoResize" Height="350" Width="400">
    <Grid>
        <Label Content="Название:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="200" ToolTip="Enter the product name"/>

        <Label Content="Цена(19,99):" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="200" ToolTip="Enter the price as a number (e.g., 19.99)"/>

        <Label Content="Скидка(19,99):" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DiscountTextBox" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="200" ToolTip="Enter the discount as a percentage (e.g., 10 for 10%)"/>

        <Button Content="Добавить Продукт" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Width="108" Click="AddButton_Click"/>
    </Grid>
</Window>
